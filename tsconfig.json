{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": false,
        "noUnusedLocals": false,
        "paths": {
            "components/*": ["src/components/*"],
            "pages/*": ["src/pages/*"],
            "store/*": ["src/store/*"],
            "translations/*": ["src/translations/*"],
            "constants/*": ["src/constants/*"],
            "assets/*": ["src/assets/*"],
            "utils/*": ["src/utils/*"]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ]
}
